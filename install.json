{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./build/app.js"
      },
      {
        "type": "style",
        "src": "./build/app.css"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "embeds": {
        "title": "Videos or Playlists",
        "type": "array",
        "items": {
          "title": "Embed",
          "type": "object",
          "properties": {
            "url": {
              "title": "URL",
              "type": "string",
              "description": "The URL of the Vimeo video to be embedded",
              "order": 1,
              "default": "https://vimeo.com/45196609",
              "placeholder": "https://vimeo.com/123..."
            },
            "location": {
              "title": "Location",
              "type": "object",
              "format": "element",
              "description": "Select where on the page would you like this video to appear",
              "order": 2,
              "default": {
                "selector": "body",
                "method": "prepend"
              }
            },
            "autoplay": {
              "title": "Autoplay",
              "type": "boolean",
              "description": "Enable autoplay",
              "order": 3
            }
          }
        }
      }
    }
  }
}
